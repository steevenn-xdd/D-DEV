{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/components/*": [
        "src/components/*.astro"
      ],
      "@/layouts/*": [
        "src/layouts/*.astro"
      ],
      "@/site-config": [
        "src/site.config.ts"
      ],
      "@/stores/*": [
        "src/stores/*"
      ],
      "@/types": [
        "src/types.ts"
      ],
      "@/utils": [
        "src/utils/index.ts"
      ]
    },
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".vscode",
    "dist"
  ],
  "extends": "astro/tsconfigs/strictest"
}