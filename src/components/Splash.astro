---
import { Image } from "astro:assets";
import LogoSvg from "../assets/DEV (Logotipo).svg";
import Starfield from "./Starfield.astro";

---

<section class="absolute z-10 top-0 left-0 right-0 bottom-0 w-screen h-screen">
	<Starfield />
	
	
	<div class="flex h-full items-center justify-center">
		<div
			id="Lenguas"
			class="  w-2/3 flex flex-col max-w-2xl items-center justify-center sm:w-2/3 sm:max-w-2xl "
		>
			<Image
				class="h-full w-full object-cover"
				src={LogoSvg}
				width="1024"
				loading="eager"
				alt="A floating Lenguas in a space suit"
			/>
		</div>
	</div>
</section>

<noscript>
	<style>
		#splash-bg-fallback {
			display: block;
		}
	</style>
</noscript>

<style>
	@keyframes float {
		0% {
			transform: translate3d(0, 0, 0);
		}

		100% {
			transform: translate3d(0, 30px, 0);
		}
	}

	#Lenguas {
		animation: float linear 2.5s infinite alternate;
	}

	@media (prefers-reduced-motion: reduce) {
		#Lenguas {
			@apply animate-none;
		}

		:global(#starfield) {
			@apply hidden;
		}

		#splash-bg-fallback {
			@apply block;
		}
	}
</style>
